{
  "name": "playwright",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "trace:show": "npx playwright show-trace traces/trace.zip",
    "clean": "rimraf traces playwright-report allure-results allure-report",
    "test": "npm run clean && npx playwright test",
    "test:headed": "HEADLESS=false npm run test",
    "test:ci": "HEADLESS=true TRACE=retain-on-failure npm run test",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "npm run allure:generate && allure open allure-report",
  "mcp": "npx @playwright/mcp"
  },
