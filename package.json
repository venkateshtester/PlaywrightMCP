    "allure-playwright": "^3.4.1",
    "dotenv": "^16.4.5",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@playwright/mcp": "^0.0.41",
    "ajv": "^8.17.1"
  }
}
